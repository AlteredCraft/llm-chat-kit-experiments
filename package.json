{
  "name": "llm-chat-kit",
  "version": "0.1.0",
  "description": "A lightweight, reusable LLM chat interface for research projects",
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "dev:server": "bun run --watch src/server/index.ts",
    "build": "bun run build:client && bun run build:server",
    "build:client": "vite build --config vite.config.ts",
    "build:server": "bun build src/server/index.ts --outdir dist/server --target bun",
    "start": "bun run dist/server/index.js",
    "test": "bun test --coverage tests",
    "test:unit": "bun test --coverage tests/unit",
    "test:integ": "bun test --coverage tests/integ",
    "test:watch": "bun test tests/unit --watch"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/google": "^2.0.0",
    "@ai-sdk/openai": "^2.0.0",
    "ai": "^5.0.0",
    "hono": "^4.10.0",
    "lucide-react": "0.556.0",
    "ollama-ai-provider-v2": "^1.5.0",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.1",
    "typescript": "^5.0.0",
    "vite": "7.2.6"
  },
  "license": "MIT",
  "author": "Altered Craft"
}